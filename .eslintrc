{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "overrides":[{
        "files": ["src/*.js"],
        "excludedFiles": ["*.json"]
    }],
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
			"single"
        ],
        "semi": [
            "error",
            "always"
        ],
	  "no-console": "warn",
	  "no-unused-vars": "warn"
    }
}